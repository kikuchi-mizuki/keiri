{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.minimal"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT app_minimal:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
